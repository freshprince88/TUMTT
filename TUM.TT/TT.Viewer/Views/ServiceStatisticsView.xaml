                                            <Binding RelativeSource="{RelativeSource Self}" Path="Tag"/>
                                        </MultiBinding>
                                    </ToggleButton.Content>
                                </ToggleButton>
                            </Grid>
                            <Grid Grid.Row="1" Grid.Column="1" Margin="2 2 0 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
