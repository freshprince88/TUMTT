<UserControl x:Class="TT.Viewer.Views.MediaView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
      xmlns:cal="http://www.caliburnproject.org"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Icons.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/FlatSlider.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Themes/SplitButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="*" ></ColumnDefinition>
                <ColumnDefinition  Width="8*" MinWidth="240" ></ColumnDefinition>
                <ColumnDefinition  Width="*" ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" Margin="0,5,0,5" Background="{DynamicResource AccentColorBrush2}" />
            <Slider Grid.Column="1" Margin="10,0,10,0" VerticalAlignment="Center" />
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition MinWidth="30" MaxWidth="40"></ColumnDefinition>
                <ColumnDefinition MinWidth="30" MaxWidth="40"></ColumnDefinition>
                <ColumnDefinition MinWidth="30" MaxWidth="40"></ColumnDefinition>
                <ColumnDefinition MaxWidth="10"></ColumnDefinition>
                <ColumnDefinition Width="2*" MinWidth="60" MaxWidth="80"></ColumnDefinition>
                <ColumnDefinition MaxWidth="10"></ColumnDefinition>
                <ColumnDefinition MinWidth="30" MaxWidth="40"></ColumnDefinition>
                <ColumnDefinition MinWidth="30" MaxWidth="40"></ColumnDefinition>
                <ColumnDefinition MinWidth="30" MaxWidth="40"></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Style="{StaticResource MetroAccentFlat}" Grid.Column="1" cal:Message.Attach="[Event Click] = [Action PreviousRally(mediaElement)]">
                <Rectangle Width="15" Height="15" 
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                          Visual="{DynamicResource appbar_control_rewind}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
            <Button Style="{StaticResource MetroAccentFlat}" Grid.Column="2" cal:Message.Attach="[Event Click] = [Action Previous5Frames(mediaElement)]">
                <Rectangle Width="15" Height="15" 
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                          Visual="{DynamicResource appbar_control_rewind_variant}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
            <Button Style="{StaticResource MetroAccentFlat}" Grid.Column="3" cal:Message.Attach="[Event Click] = [Action PreviousFrame(mediaElement)]">
                <Rectangle Width="15" Height="15" 
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                          Visual="{DynamicResource appbar_navigate_previous}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>

            <ToggleButton x:Name="PlayButton" Style="{StaticResource MetroAccentToggle}"  Grid.Column="5" cal:Message.Attach="[Event Click] = [Action Play(mediaElement)]">
                <Rectangle Width="15" Height="15" 
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ToggleButton}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                          Visual="{DynamicResource appbar_control_play}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </ToggleButton>
            <ToggleButton x:Name="PauseButton" Style="{StaticResource MetroAccentToggle}" Grid.Column="5" Visibility="Hidden" cal:Message.Attach="[Event Click] = [Action Pause(mediaElement)]">
                <Rectangle Width="15" Height="15" 
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ToggleButton}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                          Visual="{DynamicResource appbar_control_pause}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </ToggleButton>

            <Button Style="{StaticResource MetroAccentFlat}" Grid.Column="7" cal:Message.Attach="[Event Click] = [Action NextFrame(mediaElement)]">
                <Rectangle Width="15" Height="15" 
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                          Visual="{DynamicResource appbar_navigate_next}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
            <Button Style="{StaticResource MetroAccentFlat}" Grid.Column="8" cal:Message.Attach="[Event Click] = [Action Next5Frames(mediaElement)]">
                <Rectangle Width="15" Height="15" 
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                          Visual="{DynamicResource appbar_control_fastforward_variant}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
            <Button Style="{StaticResource MetroAccentFlat}" Grid.Column="9" cal:Message.Attach="[Event Click] = [Action NextRally(mediaElement)]">
                <Rectangle Width="15" Height="15" 
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                          Visual="{DynamicResource appbar_control_fastforward}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>

        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition MinWidth="30" MaxWidth="40"></ColumnDefinition>
                <ColumnDefinition MinWidth="30" MaxWidth="40"></ColumnDefinition>
                <ColumnDefinition MinWidth="30" MaxWidth="40"></ColumnDefinition>
                <ColumnDefinition MaxWidth="10"></ColumnDefinition>
                <ColumnDefinition Width="2*" MinWidth="60" MaxWidth="80"></ColumnDefinition>
                <ColumnDefinition MaxWidth="10"></ColumnDefinition>
                <ColumnDefinition MinWidth="30" MaxWidth="40"></ColumnDefinition>
                <ColumnDefinition MinWidth="30" MaxWidth="40"></ColumnDefinition>
                <ColumnDefinition MinWidth="30" MaxWidth="40"></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <ToggleButton Style="{StaticResource MetroAccentToggle}" Grid.Column="1">
                75%
            </ToggleButton>
            <ToggleButton Style="{StaticResource MetroAccentToggle}" Grid.Column="2">
                50%
            </ToggleButton>
            <ToggleButton Style="{StaticResource MetroAccentToggle}" Grid.Column="3">
                25%
            </ToggleButton>




            <Button  Style="{StaticResource MetroAccentFlat}" Grid.Column="5">
                    <Rectangle Width="15" Height="15" 
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                          Visual="{DynamicResource appbar_control_stop}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <cal:ActionMessage MethodName="Stop">
                            <cal:Parameter Value="{Binding ElementName=myMediaElement}" />
                        </cal:ActionMessage>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
            <ToggleButton Style="{StaticResource MetroAccentToggle}" Grid.Column="7">
                <Rectangle Width="15" Height="15" 
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ToggleButton}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                          Visual="{DynamicResource appbar_repeat}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </ToggleButton>
            <Button  Style="{StaticResource MetroAccentFlat}" Grid.Column="9" >
                <Rectangle Width="15" Height="15" 
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                          Visual="{DynamicResource appbar_sound_3}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
            <Button  Style="{StaticResource MetroAccentFlat}" Grid.Column="9" Visibility="Hidden">
                <Rectangle Width="15" Height="15" 
                Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                          Visual="{DynamicResource appbar_sound_0}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
        </Grid>
        <MediaElement x:Name="myMediaElement" Source="C:\Users\Michael Fuchs\Videos\OvtcharovDimitrij_ZhangJike_WTTTC_2014_MT_Final.mp4" 
                      HorizontalAlignment="Left" Height="295" Margin="10,10,0,0" VerticalAlignment="Center" Width="380"/>
    </Grid>


</UserControl>

